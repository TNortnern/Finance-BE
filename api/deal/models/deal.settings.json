{
  "kind": "collectionType",
  "collectionName": "deals",
  "info": {
    "name": "Deal"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "approved": {
      "type": "boolean",
      "default": false
    },
    "author": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "deal"
    },
    "rankings": {
      "collection": "ranking-item",
      "via": "deals",
      "dominant": true
    },
    "size": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "filters": {
      "collection": "filter-item",
      "via": "deals"
    },
    "comments": {
      "type": "string"
    },
    "entries": {
      "collection": "deal-entry",
      "via": "deal"
    }
  }
}
